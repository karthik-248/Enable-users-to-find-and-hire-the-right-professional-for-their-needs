    <nav>
      <a href="index.html" class="nav-btn">Home</a>
      <a href="services.html" class="nav-btn">Services</a>
      <a href="login.html" class="nav-btn">Login</a>
    </nav>
  </header>

  <section style="text-align:center; margin-top:50px;">
    <h2>Login / Sign Up</h2>
    <input type="text" id="username" placeholder="Enter your name" /><br>
    <input type="text" id="phone" placeholder="Enter your phone number" /><br>
    <input type="text" id="address" placeholder="Enter your address" /><br>
    <button class="btn" onclick="loginUser()">Login</button>
    <p style="margin-top:10px; color:#0077cc; font-weight:bold;">
      Free delivery if your location is within 500 km!
    </p>
  </section>

  <script>
    function loginUser() {
      const name = document.getElementById('username').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const address = document.getElementById('address').value.trim();

      if (!name || !phone || !address) {
        alert("Please fill all fields!");
        return;
      }

      // Save user info in localStorage
      const user = { name, phone, address };
      localStorage.setItem('currentUser', JSON.stringify(user));
      alert(`Welcome, ${name}!`);
      window.location.href = "services.html";
    }
  </script>
</body>
</html>
